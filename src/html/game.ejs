<html>
  <head>
    <title>Online Web Game</title>
    <link rel="stylesheet" type="text/css" href="/style/game.css">
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body style="background-color: black;">
    <div id="left_column" style="width:60%; height:80%;">
      <canvas id="cv_maplayer" width="100%" height="100%" 
        style="position: absolute; left: 0; top: 0; z-index: 0;"></canvas>
      <canvas id="cv_entitylayer" width="100%" height="100%" 
        style="position: absolute; left: 0; top: 0; z-index: 1;"></canvas>
      <canvas id="cv_itemlayer" width="100%" height="100%" 
        style="position: absolute; left: 0; top: 0; z-index: 2;"></canvas>
    </div>
    <div id="right_column">
    	<div id="stats" style="width: 300px;">
        <div id="stats_titleline">
          <span id="stats_name">Unknown</span>
        </div>
        <div id="stats_hpline">
          <span>
            <progress id="stats_hpbar" value="0" max="0" style="float:right;width:55%;height:1em;" />
          </span>
          <span>Health:</span>
          <span id="stats_hp">0</span>
          <span>/</span>
          <span id="stats_hp_max">0</span>
        </div>
      </div>
    </div>
    <div id="messages_container">
      <div id="messages"></div>
    </div>
    <input type="text" id="chat_input" placeholder="Send chat message">
  </body>
  <script src="/static/game.js"></script>
</html>